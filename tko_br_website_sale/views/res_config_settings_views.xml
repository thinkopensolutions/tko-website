<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_sale" model="ir.ui.view">
        <field name="name">Sale Config</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_stock.res_config_settings_view_form_sale"/>
        <field name="arch" type="xml">
            <field name="group_route_so_lines" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" title="This default value is applied to any new product created. This can be changed in the product detail form.">
                            <div class="o_setting_right_pane">
                                <label for="default_invoice_policy"/>
                                <div class="text-muted">
                                    Quantities to invoice from sales orders
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="sale_freight_warning" class="o_light_label" widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>
            </field>
        </field>
    </record>
</odoo>
