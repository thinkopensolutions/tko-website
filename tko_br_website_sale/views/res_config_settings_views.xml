<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_sale" model="ir.ui.view">
        <field name="name">Sale Config</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='delivery']" position="inside">
                <div class="col-xs-12 col-md-12 o_setting_box"
                     title="This default value is applied to any new product created. This can be changed in the product detail form.">
                    <div class="o_setting_right_pane">
                        <label for="sale_freight_warning"/>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="sale_freight_warning" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
